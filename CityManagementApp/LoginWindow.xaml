<Window x:Class="CityManagementApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="City Management" Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5">

    <Grid>
        <!-- Centered card -->
        <Border Background="White" CornerRadius="12" Padding="40"
                Width="350" Height="220" 
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="15" ShadowDepth="3"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0" >
                <!-- Title -->
                <TextBlock Text="City Management App"
                           FontSize="20" FontWeight="Bold" 
                           Foreground="#333333" TextAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Subtitle -->
                <TextBlock Text="Sign in with your Auth0 account"
                           FontSize="14" Foreground="#666666" 
                           TextAlignment="Center" Margin="0,0,0,20"/>

                <!-- Login button -->
                <Button Content="Login with Auth0"
                        Width="220" Height="45"
                        Background="#0059d6" Foreground="White"
                        FontSize="14" FontWeight="SemiBold"
                        BorderThickness="0" 
                        Click="Login_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8" Padding="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0044aa"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#003380"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
