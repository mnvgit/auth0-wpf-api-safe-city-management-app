<Window x:Class="CityManagementApp.CreateProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Task" Height="180" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Project Details:"/>
        <TextBox x:Name="DetailsTextBox" Margin="0,5"/>
        <TextBlock Text="Budget:"/>
        <TextBox x:Name="BudgetTextBox" PreviewTextInput="NumberValidationTextBox" Margin="0,5"/>
        <Button Content="OK" Width="80" Margin="0,10,0,0" HorizontalAlignment="Right" Click="OkButton_Click"/>
    </StackPanel>
</Window>
